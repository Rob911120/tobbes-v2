# Nuitka Build Configuration for Tobbes v2
# See: https://nuitka.net/doc/user-manual.html

[nuitka]
# Build mode
standalone = True
onefile = False

# Output settings
output-dir = dist
output-filename = TobbesWizard

# Windows-specific
windows-disable-console = True
windows-icon-from-ico = build/assets/app.ico
windows-company-name = FA-TEC
windows-product-name = Tobbes v2 - Spårbarhetsguiden
windows-file-version = 2.0.0
windows-product-version = 2.0.0
windows-file-description = Spårbarhetsguide för materialcertifikat

# Plugins
enable-plugin = pyside6
enable-plugin = numpy

# Include packages
include-package = operations
include-package = domain
include-package = data
include-package = services
include-package = config
include-package = ui

# Data files
include-data-dir = data/migrations=data/migrations

# Performance
jobs = 4
lto = yes

# Optimization
python-flag = no_site
python-flag = no_warnings

# Module selection
follow-imports = yes
follow-stdlib = yes

# Warnings
warn-implicit-exceptions = yes
warn-unusual-code = yes

# Deployment
deployment = yes
assume-yes-for-downloads = yes
